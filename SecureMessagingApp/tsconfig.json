{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "ws"],
    "target": "esnext",
    "noEmit": false,
    "outDir": "./dist",
    
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js"
  ],
  "include": [
    "**/*.ts", 
    "**/*.tsx",    
  ]
}

